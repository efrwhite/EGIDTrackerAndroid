<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground"
    tools:context="SignUpActivity"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/HomeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/signUpBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:fitsSystemWindows="false"
            android:src="@drawable/signup_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- Navigation Bar -->
        <RelativeLayout
            android:id="@+id/navBar"
            android:layout_width="411dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/lato_medium"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:text="@string/signIn"
                android:textColor="@color/onPrimary"
                android:textSize="20sp" />
        </RelativeLayout>

        <!-- Text Entry Fields -->

        <TextView
            android:id="@+id/welcomeSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="Welcome Back,"
            android:textColor="@color/onPrimary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.105"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/navBar"
            app:layout_constraintVertical_bias="0.084" />

        <TextView
            android:id="@+id/SignInText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="Log In!"
            android:textColor="@color/onPrimary"
            android:textSize="80sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.167"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/navBar"
            app:layout_constraintVertical_bias="0.129" />

        <EditText
            android:id="@+id/signInUsername"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/username_roundedbg"
            android:elevation="4dp"
            android:fontFamily="@font/lato_bold"
            android:hint="@string/username"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="42dp"
            android:paddingTop="5dp"
            android:paddingEnd="42dp"
            android:paddingBottom="5dp"
            android:textColor="@color/primary"
            android:textColorHint="@color/primary"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signUpBackground" />

        <EditText
            android:id="@+id/signInPassword"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:elevation="4dp"
            android:background="@drawable/password_roundedbg"
            android:fontFamily="@font/lato_bold"
            android:hint="@string/password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingStart="42dp"
            android:paddingTop="5dp"
            android:paddingEnd="42dp"
            android:paddingBottom="5dp"
            android:textColor="@color/primary"
            android:textColorHint="@color/primary"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signInUsername" />

        <!-- Buttons -->
        <Button
            android:id="@+id/signInButton"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/signup_roundedbg"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingTop="0dp"
            android:paddingEnd="16dp"
            android:paddingBottom="0dp"
            android:text="@string/signIn"
            android:textColor="#ffffff"
            android:textSize="17sp"
            app:backgroundTint="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signInPassword" />

        <Button
            android:id="@+id/signUpLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/lato_medium"
            android:text="@string/signUp"
            android:textColor="@color/primary"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dontHaveAcc"
            tools:layout_editor_absoluteY="587dp" />

        <TextView
            android:id="@+id/dontHaveAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:fontFamily="@font/lato_medium"
            android:text="@string/dontHavAcc"
            android:textColor="@color/primary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signInButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
